<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".VPNFragment">

    <EditText
        android:id="@+id/tcp_proxy_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TCP Proxy URL(eg. 127.0.0.1:4521)"
        android:importantForAutofill="no"
        android:inputType="textUri" />

    <!-- [!! 新增 !!] -->
    <EditText
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User"
        android:importantForAutofill="no"
        android:inputType="text" />

    <!-- [!! 新增 !!] -->
    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/udp_proxy_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UDP Proxy URL(eg. 127.0.0.1:4521)"
        android:importantForAutofill="no"
        android:inputType="textUri" />

    <EditText
        android:id="@+id/dns_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DNS Address(eg. 1.1.1.1)"
        android:importantForAutofill="no"
        android:inputType="textUri" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Config" />

        <Button
            android:id="@+id/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Connect VPN" />
    </LinearLayout>

    <TextView
        android:id="@+id/vpn_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="VPN Status: Disconnected"
        android:textSize="16sp" />

</LinearLayout>
